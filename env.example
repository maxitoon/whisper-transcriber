# Whisper Transcriber Configuration

# Model settings
WHISPER_MODEL=base
# Options: tiny, base, small, medium, large, large-v2, large-v3

# Download settings
YOUTUBE_FORMAT=best[height<=480]/best
YOUTUBE_OUTPUT_DIR=./downloads

# Output settings
OUTPUT_DIR=./transcripts
OUTPUT_FORMAT=txt
# Options: txt, srt, vtt, json

# Performance settings
DEVICE=cpu
# Options: cpu, cuda (if GPU available)
CHUNK_LENGTH=30
# Length of audio chunks in seconds

# API settings (if using external services)
# OPENAI_API_KEY=your_key_here
